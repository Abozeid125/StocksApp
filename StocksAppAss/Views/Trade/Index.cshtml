@model StocksAppAss.Models.StockTrade;

@{
    ViewBag.Title = "Trade";
    ViewBag.Currenturl = "~/Trade/Index";

}


<div class="text-grey">


    <span>Stocks</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>@Model.StockName</span>

</div>

<form method="post">     


<div class="box trading-panel">


    <div class="flex trading-panel-flex">

        <div id="stock-price-panel" class="flex-1">

            <div class="stock">

                

                   <h3 class="stock-title"> @Model.StockName (@Model.StockSymbol)</h3>


               



                <span style="font-size: 5em; color: grey;">$</span>
                <span class="stock-price">@Model.StockPrice?.ToString("N")</span>
                <input type="hidden" name="Price" value="@Model.StockPrice" />
                <input type="hidden" name="StockName" value="@Model.StockName" />
                <input type="hidden" name="StockSymbol" value="@Model.StockSymbol" />
                <input type="hidden" name="DateAndTimeOfOrder" value="@DateTime.Now" />
               

                   

            </div>

        </div>

        <div style="width: 1px; height: auto; background-color: gray; margin: 0 10px;"></div>


        <div class="flex-1">


            <h4 class="m text-grey">New Order</h4>

            <div class="m">
                Quantity:

                <input type="number" name="Quantity" placeholder="100" value="100" />



            </div>
          

            <button class="button-red-back button mr "  formaction ="~/Trade/SellOrder"type="submit" >sell</button>
            <button class="button-green-back button ml" formaction ="~/trade/buyOrder" type="submit">buy</button>

                @if (ViewBag.Errors != null)
                {


                    List<string> errors = ViewBag.Errors;
                    <ul class="text-red">

                        @foreach (string error in errors)
                        {
                            @error
                        }


                    </ul>


                }

        </div>

           


    </div>


</div>

</form>